{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "composite": true
    },
    "exclude": ["node_modules"]
}
