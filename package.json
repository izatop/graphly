{
    "name": "graphly",
    "version": "0.0.1",
    "description": "GraphQL schema generation based on TypeScript reflection.",
    "main": "index.js",
    "repository": "https://github.com/graphly/graphly",
    "author": "izatop@gmail.com",
    "license": "MIT",
    "private": true,
    "scripts": {
        "clean": "lerna run clean",
        "lint": "tslint 'packages/*/src/**/*.ts'",
        "build": "yarn run clean && tsc -b packages",
        "build:watch": "tsc -b packages -w",
        "build:compose": "lerna run compose --scope=@graphly/test",
        "test": "yarn build && yarn build:compose && jest --config jest.json",
        "test:watch": "yarn build:compose && jest --watch --config jest.json",
        "bootstrap": "lerna bootstrap && lerna link"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/jest": "^24.0.19",
        "jest": "^24.9.0",
        "lerna": "^3.18.3",
        "ts-jest": "^24.1.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4"
    }
}
