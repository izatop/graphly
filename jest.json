{
    "roots": [
        "<rootDir>/packages/test/src"
    ],
    "transform": {
        "^.+\\.ts$": [
            "ts-jest",
            {
                "tsconfig": "packages/test/tsconfig.json"
            }
        ]
    },
    "testRegex": "/[^/]*Test\\.ts$",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
        "/node_modules/"
    ],
    "moduleFileExtensions": [
        "ts",
        "json",
        "js"
    ]
}
