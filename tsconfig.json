{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2019",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "useUnknownInCatchVariables": false
    },
    "exclude": [
        "node_modules"
    ]
}
